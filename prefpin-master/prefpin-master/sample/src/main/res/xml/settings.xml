<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
  <Preference
      android:key="@string/pref_about_key"
      android:title="@string/pref_about_title"
      />
  <EditTextPreference
      android:defaultValue="@string/pref_edit_default"
      android:key="@string/pref_edit_key"
      android:summary="@string/pref_edit_default"
      android:title="@string/pref_edit_title"
      />
  <CheckBoxPreference
      android:defaultValue="@string/pref_checkbox_default"
      android:key="@string/pref_checkbox_key"
      android:title="@string/pref_checkbox_title"
      />

  <SwitchPreference
      android:defaultValue="@string/pref_switch_default"
      android:key="@string/pref_switch_key"
      android:title="@string/pref_switch_title"
      />

</PreferenceScreen>